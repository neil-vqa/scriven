{
    "manifest_version": 3,
    "name": "Scriven",
    "version": "2.0",
    "description": "Write notes to YouTube videos.",
    "permissions": [
        "storage",
        "tabs",
        "downloads"
    ],
    "host_permissions": [
        "*://*.youtube.com/*"
    ],
    "background": {
        "service_worker": "src/background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.youtube.com/watch*"
            ],
            "js": [
                "lib/browser-polyfill.min.js",
                "src/ui.js",
                "src/content.js"
            ]
        }
    ],
    "action": {
        "default_popup": "src/popup.html",
        "default_title": "Scriven - Toggle Notes UI"
    }
}